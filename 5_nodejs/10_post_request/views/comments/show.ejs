<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Single comment </title>
</head>
<body>
    <!-- faccio vedere il commento e le varie feature -->
    <h1>Comment id: <%= comment.id %> </h1>
    <h2><%= comment.comment %> - <%= comment.username %> </h2>
    <a href="/comments">Home page</a>
    <a href="/comments/<%= comment.id %>/edit">Edit</a>

    <!-- form per cancellare un commento -->
    <form action="/comments/<%= comment.id %>/?_method=DELETE ">
        <button>Submit</button>
    </form>
</body>
</html>